
<% layout('layouts/boilerplate') %>

<div class="listing-container">
  <% for(let listing of listings) { %> 
    <a href="/listings/<%=listing.id%>" class="listing-links">
      <div class="listing-item">
        <div class="card">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>" style="height: 14rem;">
          <div class="card-body">
            <h3>owner: <%= listing.owner.username %></h3>
            <p class="card-title">
              <%= listing.title.length > 30 ? listing.title.slice(0, 25) + '...' : listing.title %>
            </p>
            <p>â‚¹ <%= listing.price.toLocaleString("en-IN") %> /night</p>
          </div>
        </div>
      </div>
    </a>
  <% } %>
</div>



